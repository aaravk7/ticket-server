<%- include('./partials/head'); %>
<main class="container py-5 d-flex flex-column gap-3">
  <h1 class="display-5">Event Tickets</h1>
  <div class="flex">
    <a href="tickets/add" class="btn btn-primary">Add Ticket</a>
  </div>
  <table class="table table-bordered table-stripped">
    <thead>
      <tr>
        <th scope="col">Sr No.</th>
        <th scope="col">Date</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Total Quantity</th>
        <th scope="col">Available Quantity</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach((ticket , index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= ticket.date.toDateString() %></td>
        <td><%= ticket.description %></td>
        <td>Rs.<%= ticket.price %></td>
        <td><%= ticket.totalQuantity %></td>
        <td><%= ticket.availableQuantity %></td>
        <td><a href="tickets/<%= ticket._id %>/orders">Orders</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</main>
<footer><%- include('./partials/foot'); %></footer>
